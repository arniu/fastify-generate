{
  "name": "__packageName__",
  "version": "0.1.0",
  "description": "A fastify App",
  "private": true,
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "start": "node bin/www",
    "prelint": "prettier --write './**/*.{js,md,yml}'",
    "lint": "standard --fix",
    "dev": "nodemon bin/www"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "standard": {
    "env": {
      "jest": true,
      "node": true
    }
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "fastify": "__fastify__",
    "fastify-autoload": "^1.0.0",
    "fastify-plugin": "^1.4.0"
  },
  "devDependencies": {
    "husky": "^4.0.2",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.3",
    "pino-pretty": "^4.0.0",
    "prettier": "^1.15.0",
    "standard": "^14.0.0"
  }
}
