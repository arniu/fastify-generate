{
  "name": "__packageName__",
  "version": "0.1.0",
  "description": "A fastify plugin",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "tap 'test/**/*.test.js'",
    "prelint": "prettier --write './**/*.{js,md,yml}'",
    "lint": "standard --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "dependencies": {
    "fastify-plugin": "^1.4.0"
  },
  "devDependencies": {
    "fastify": "__fastify__",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.0",
    "standard": "^12.0.0",
    "tap": "^14.0.0"
  },
  "engines": {
    "node": ">= 6"
  }
}
